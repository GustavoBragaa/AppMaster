<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gusta.appmaster.Activity.MainActivity">


    <Button
        android:id="@+id/btCadastrarLivros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btListarLivros"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="131dp"
        android:text="Cadastrar Livro" />

    <Button
        android:id="@+id/btListarLivros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="126dp"
        android:text="Listar Livros" />
</RelativeLayout>
